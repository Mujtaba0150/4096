{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: Default build",
			"command": "g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"-Og",
				"-Wall",
				"-Wextra",
				"-Wpedantic",
				"-fno-omit-frame-pointer",
				"${fileDirname}\\game.cpp",
				"-o",
				"${fileDirname}\\game.exe",
				"-lm",
				"-lstdc++",
				"-lsfml-graphics",
				"-lsfml-audio",
				"-lsfml-window",
				"-lsfml-system"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: D:\\Apps\\MinGW\\ucrt64\\bin\\g++.exe",
		},
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe build active file",
			"command": "g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"-Og",
				"-Wall",
				"-Wextra",
				"-Wpedantic",
				"-fno-omit-frame-pointer",
				"${file}",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe",
				"-lm",
				"-lstdc++",
				"-lsfml-graphics",
				"-lsfml-audio",
				"-lsfml-window",
				"-lsfml-system"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"detail": "compiler: D:\\Apps\\MinGW\\ucrt64\\bin\\g++.exe",
		},
		{
			"label": "run",
			"type": "shell",
			"command": "${fileDirname}\\${fileBasenameNoExtension}.exe",
			"dependsOn": "C/C++: g++.exe build active file",
			"problemMatcher": []
		}
	]
}